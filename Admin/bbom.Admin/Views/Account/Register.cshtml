@using System.Configuration
@model bbom.Admin.Core.ViewModels.Account.Register2ViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Регистрация";
}
<style>
    body {
    min-height: 1000px;
    background: url('http://@ConfigurationManager.AppSettings["Domain"]/Content/Templates/Default/Starninght/img/hero.jpg') no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
        color: white;
    }
</style>
<h2 style="margin-top: 200px">@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
