    <script>
        var currentUserRole = '@User.Identity.GetUserRoles()'.split(",");

        //$.connection.hub.start();

        //$.connection.Notification.client.notifyClient = function (alert) {
        //    notify(alert);
        //};

        function userIsRole(roleName) {
            for (var i = 0; i < currentUserRole.length; i++) {
                if (currentUserRole[i] === roleName) {
                    return true;
                }
            }
            return false;
        }

        function notify(data) {
            new PNotify({
                text: data.message,
                type: data.type,
                shadow: false,
                styling: 'bootstrap3'
            });
        }

        var http = "http://";

        function GetPostUrl(id) {
            return http + id + "." + "@ConfigurationManager.AppSettings["Domain"]";
        }

        function GetActionUrl(controler, action) {
            return http + "www." + "@ConfigurationManager.AppSettings["Domain"]" + "/" + controler + "/" + action;
        }

        function GetUrl(subdomain, path) {
            return http + subdomain + "." + "@ConfigurationManager.AppSettings["Domain"]" + path;
        }

        function GetUrl(path) {
            return http + '@User.Identity.Name' + "." + "@ConfigurationManager.AppSettings["Domain"]" + path;
        }
    </script>
    <script>
        !function ($) {
            $(document).on("click", "ul.nav li.parent > a > span.icon", function () {
                $(this).find('em:first').toggleClass("glyphicon-minus");
            });
            $(".sidebar span.icon").find('em:first').addClass("glyphicon-plus");
        }(window.jQuery);

        $(window).on('resize', function () {
            if ($(window).width() > 768) $('#sidebar-collapse').collapse('show');
        });
        $(window).on('resize', function () {
            if ($(window).width() <= 767) $('#sidebar-collapse').collapse('hide');
        });
    </script>

