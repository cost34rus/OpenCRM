@using bbom.Admin.Code.Notifications
@using bbom.Data.ModelPartials
@model bbom.Admin.Core.ViewModels.Account.PersonalRegisterViewModel
@{
    ViewBag.Title = "Создать сайт";
}
<div class="panel panel-primary" style="margin-top: 20px">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm("Index", "PersonalPageCreator", FormMethod.Post, new {role = "form"}))
        {
            @Html.AntiForgeryToken()
            <div style="float: left; width: 100%;">
                <div style="float: left; font-size: 18px; color: #444; width: 790px; margin-top: 15px; margin-left: 10px;">
                    <div style="float: left; width: 100%;">
                        <div style="float: left; width: 380px;">
                            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger", style = "float: left; width: 100%; text-align: left;"})
                            @Html.LabelFor(model => model.Name, htmlAttributes: new {style = "float: left; width: 100%; text-align: left;"})
                            <div style="float: left; width: 100%; text-align: left; margin-top: 5px;">
                                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "inputsty", id = "name"}})
                            </div>
                        </div>
                        <div style="float: left; width: 380px;">
                            @Html.ValidationMessageFor(model => model.Suname, "", new {@class = "text-danger", style = "float: left; width: 100%; text-align: left;"})
                            @Html.LabelFor(model => model.Suname, htmlAttributes: new {style = "float: left; width: 100%; text-align: left;"})
                            <div style="float: left; width: 100%; text-align: left; margin-top: 5px;">
                                @Html.EditorFor(model => model.Suname, new {htmlAttributes = new {@class = "inputsty", id = "suname"}})
                            </div>
                        </div>
                    </div>
                    <div style="float: left; width: 100%; text-align: left; margin-top: 10px;">Имя сайта:</div>
                    <div style="float: left; width: 100%; text-align: left; margin-top: 2px;">
                        @Html.ValidationMessageFor(model => model.UserName, "", new {@class = "text-danger", style = "float: left; width: 100%; text-align: left;"})
                        @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "inputsty", id = "userName", style = "width: 223px; text-align: left; float: left; color: #FF0000; height: 27px;"}})
                        <div style="float: left; font-size: 14px; margin-top: 20px; margin-left: 2px; margin-right: 2px;">*</div>
                        <div style="margin-left: 10px; margin-top: 2px;">solomon24.com @*<button href="javascript:void(0);" onclick="">генерировать</button>*@</div>

                    </div>
                    <div style="float: left; width: 100%; margin-top: 20px;">Видео:</div>
                    <div style="float: left; width: 100%; margin-top: 5px;">
                        @Html.DropDownListFor(m => m.VideoUrl, (IEnumerable<SelectListItem>) ViewBag.VideoUrls, new {style = "width: 772px;", @class = "inputsty"})
                    </div>
                    <div style="float: left; width: 800px; margin-top: 30px;">
                        <input id="modal_button_submit" type="submit" value="создать" class="btn btn-default"/>
                    </div>
                    <div style="float: left; width: 100%; color: #FF0000; margin-top: 30px; font-size: 16px; text-align: center;"></div>
                </div>
            </div>
        }

    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#userName').liTranslit({
                elAlias: $('#userName')
            });

            $('#name').liTranslit({
                elAlias: $('#userName')
            });
        })
    </script>
}
