@using System.Configuration
@model bbom.Admin.Core.ViewModels.PersonalPage.PersonalPageViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Solomon24";
}
<style>
    body {
    min-height: 1000px;
    background: url('http://@ConfigurationManager.AppSettings["Domain"]/Content/Templates/Default/Starninght/img/hero.jpg') no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
        color: white;
        text-align: center;
    }
</style>
<h2 style="margin-top: 80px"><img src="../../Content/img/logosolomon.png"/></h2>

    <h1>Здравствуйте @Model.Suname @Model.Name @Model.Altname!</h1>
    <h2>@Model.InvitedUserName приглашает вас присоединиться к нам!</h2>
<h2>Для того что бы пройти дальше необходимо посмотреть небольшое видео, приготовленное для вас!</h2>
<h3>После чего появится кнопка "Принять"</h3>
<div id="player"></div>
@using (Html.BeginForm("Confim", "PersonalPageCreator", FormMethod.Post, new {role = "form"}))
{
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <input id="submitButton" type="submit" class="btn btn-default" value="Принять" style="visibility: hidden" />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var userItNotWatched;
        var tag = document.createElement('script');

        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        var player;
        var videoDuration;
        var done = false;
        var timesWatch = 1;

        function onPlayerReady(event) {
            videoDuration = player.getDuration();
        }

        function onYouTubeIframeAPIReady() {
            var videoId = '@Model.VideoLink'.replace("https://www.youtube.com/watch?v=", "");
            videoId = videoId.replace("https://www.youtube.com/embed/", "");
            player = new YT.Player('player', {
                height: '390',
                width: '640',
                videoId: videoId,
                events: {
                    onReady: onPlayerReady,
                    onStateChange: onPlayerStateChange
                }
            });
        }

        function onPlayerStateChange(event) {
            var curentTime = event.target.getCurrentTime();
            if (event.data === YT.PlayerState.ENDED && curentTime >= videoDuration - 3) {
                $("#submitButton").css("visibility", "visible");
            }
        }
    </script>
}
