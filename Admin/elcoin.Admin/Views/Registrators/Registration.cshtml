@using System.Configuration
@model bbom.Admin.Core.ViewModels.Registrator.RegistratorViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.BackgroundDefault = string.Format("http://{0}/Content/Templates/Default/Starninght/img/hero.jpg", ConfigurationManager.AppSettings["Domain"]);
    ViewBag.BackgroundPath = string.Format("http://{0}/Content/img/bg/", ConfigurationManager.AppSettings["Domain"]);
    ViewBag.Title = "Регистрация";
}
<style>
    body {
    min-height: 1000px;
    background: url('@(Model.Background == null ? ViewBag.BackgroundDefault : ViewBag.BackgroundPath + Model.Background)') no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
        color: white;
    }
</style>
<h2 style="margin-top: 200px">@ViewBag.Title.</h2>

@using (Html.BeginForm("Registration", "Registrators", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Введите ваши данные.</h4>
    <h5>Пользователь предоставивщий ссылку @Model.ReferalUserName</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Suname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Suname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Skype, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Skype, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Регистрация" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
